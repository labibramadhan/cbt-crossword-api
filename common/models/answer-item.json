{
  "name": "AnswerItem",
  "plural": "AnswerItems",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created_at",
      "updatedAt": "updated_at"
    },
    "CreatedBy": true
  },
  "scope": {
    "include": [
      {
        "relation": "question"
      }
    ]
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "postgresql": {
        "dataType": "uuid",
        "dbDefault": "uuid_generate_v4()"
      }
    },
    "answer": {
      "type": "string"
    },
    "remark": {
      "type": "number"
    },
    "correct": {
      "type": "boolean",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "answer": {
      "type": "belongsTo",
      "model": "Answer",
      "foreignKey": "answer_id"
    },
    "question": {
      "type": "belongsTo",
      "model": "Question",
      "foreignKey": "question_id"
    }
  },
  "acls": false,
  "methods": {}
}
