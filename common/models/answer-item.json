{
  "name": "AnswerItem",
  "plural": "AnswerItems",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created_at",
      "updatedAt": "updated_at"
    },
    "CreatedBy": true
  },
  "scope": {
    "include": [
      {
        "relation": "question"
      }
    ]
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "postgresql": {
        "dataType": "uuid",
        "dbDefault": "uuid_generate_v4()"
      }
    },
    "answer": {
      "type": "string"
    },
    "remark": {
      "type": "number"
    },
    "correct": {
      "type": "boolean",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "answer": {
      "type": "belongsTo",
      "model": "answer",
      "foreignKey": "answer_id"
    },
    "question": {
      "type": "belongsTo",
      "model": "question",
      "foreignKey": "question_id"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "participant",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "guru",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "participant",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {}
}
